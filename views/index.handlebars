<div class="container" >
<div class="row">

    
    <div class="col-lg-6">

       

        <h2>Burgers List</h2>
        
        {{#each burgers}}
        {{#unless devoured}}
        <form action="/api/burgers/{{id}}" method="POST">
        <li>{{this.id}}. {{this.burger_name}} <button class="btn btn-success" id="devour-smt" type="submit">Devour!</button><hr></li>
        </form>
        {{/unless}}
        {{/each}}


    </div>

    <div class="col-lg-5"> 

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
 {{#if devoured}}
 <li>{{this.id }} {{ this.burger_name}} <hr></li>
 
    {{/if}}
  {{/each}}
</ul>


    </div>
</div>
<hr>
<br>
<div class="col-lg-12 text-center">
    
<h2>Add a Burger</h2>
<form class="create-form" action="/api/burgers" method="POST" >

  <div class="form-group">
    <label for="burger_name">Burger Name:</label>
    <input type="text" id="burger_name" name="burger_name">
     <button class="btn btn-info" type="submit">Add Burger</button>
  </div>
 
</form>
</div>

